<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace = "COMMON">
    <resultMap id = "BASE_RESULT_MAP" type = "com.qxd.birth.dal.entity.base.BaseEntity">
        <id column = "id" property = "id" />
        <result column = "gmt_create" property = "gmtCreate" />
        <result column = "creator" property = "creator" />
        <result column = "gmt_modified" property = "gmtModified" />
        <result column = "modifier" property = "modifier" />
        <result column = "is_deleted" property = "isDeleted" />
    </resultMap>

    <sql id = "BASE_COLUMN_LIST">
        id as id,
        is_deleted as isDeleted,
        gmt_create as gmtCreate,
        creator as creator,
        gmt_modified as gmtModified,
        modifier as modifier,
    </sql>

    <sql id = "BASE_WHERE_CLAUSE">
        <if test = "id != null">and id = #{id}</if>
        <if test = "isDeleted != null">and is_deleted = #{isDeleted}</if>
        <if test = "isDeleted == null">and is_deleted = 'N'</if>
        <if test = "gmtCreate != null">and gmt_create = #{gmtCreate}</if>
        <if test = "creator != null">and creator = #{creator}</if>
        <if test = "gmtModified != null">and gmt_modified = #{gmtModified}</if>
        <if test = "modifier != null">and modifier = #{modifier}</if>
    </sql>

    <sql id = "BASE_UPDATE_SET">
        <if test = "isDeleted != null and isDeleted != ''">
            is_deleted=#{isDeleted},
        </if>
        <if test = "isDeleted == null or isDeleted == ''">
            is_deleted= 'N',
        </if>
        <if test = "gmtCreate != null and gmtCreate != ''">
            gmt_create=#{gmtCreate},
        </if>
        <if test = "creator != null and creator != ''">
            creator=#{creator},
        </if>
        <if test = "gmtModified != null and gmtModified != ''">
            gmt_modified=#{gmtModified},
        </if>
        <if test = "gmtModified == null or gmtModified == ''">
            gmt_modified= now(),
        </if>
        <if test = "modifier != null and modifier != ''">
            modifier=#{modifier},
        </if>
    </sql>

    <sql id = "BASE_INSERT_COLUMN">
        is_deleted,
        gmt_create,
        creator,
        gmt_modified,
        modifier,
    </sql>

    <sql id = "BASE_INSERT_VALUE">
        'N',
        <if test="gmtCreate != null">
            #{gmtCreate},
        </if>
        <if test="gmtCreate == null">
            now(),
        </if>
        <if test="creator != null">
            #{creator},
        </if>
        <if test="creator == null">
            0,
        </if>
        <if test="gmtModified != null">
            #{gmtModified},
        </if>
        <if test="gmtModified == null">
            now(),
        </if>
        <if test="creator != null">
            #{creator},
        </if>
        <if test="creator == null">
            0,
        </if>
    </sql>

    <sql id = "ORDER_BY">
        <if test = "sorts != null">
            order by
            <foreach collection = "sorts" item = "tag" separator = ",">
                ${tag}
            </foreach>
        </if>
    </sql>
    <sql id = "LIMIT">
        <if test = "offset != null and limit != null">
            limit ${offset}, ${limit}
        </if>
    </sql>
</mapper>
