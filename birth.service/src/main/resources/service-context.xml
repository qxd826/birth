<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.0.xsd">

    <context:property-placeholder order="30" ignore-unresolvable="true"
                                  location="classpath:service-context.properties"/>
    <!--biz-->
    <import resource="classpath*:biz-context.xml"/>

    <!--定时器配置-->
    <import resource="classpath:quartz.xml"/>

    <!--beans-->
    <import resource="classpath:beans-config.xml"/>
</beans>