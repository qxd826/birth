<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>com.qxd.birth</groupId>
    <artifactId>birth</artifactId>
    <version>1.0</version>
    <!-- 父 module 打包为pom-->
    <packaging>pom</packaging>

    <name>birth</name>
    <!--包含的子module-->
    <modules>
        <module>birth.web</module>
        <module>birth.biz</module>
        <module>birth.dal</module>
        <module>birth.common</module>
        <module>birth.server</module>
        <module>birth.client</module>
    </modules>

    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <java-version>1.7</java-version>
        <org.springframework-version>4.0.5.RELEASE</org.springframework-version>
        <spring.security.version>3.1.4.RELEASE</spring.security.version>
        <birth.client.version>1.0-SNAPSHOT</birth.client.version>
        <project.version>1.0</project.version>
    </properties>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.1</version>

                <configuration>
                    <!-- 可以配置，也可以默认 -->
                    <!--
                    <source>${java-version}</source>
                    <target>${java-version}</target>
                    -->
                    <source>${java-version}</source>
                    <target>${java-version}</target>
                    <encoding>UTF-8</encoding>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-resources-plugin</artifactId>
                <version>2.6</version>
                <configuration>
                    <encoding>UTF-8</encoding>
                </configuration>
            </plugin>

        </plugins>
    </build>

